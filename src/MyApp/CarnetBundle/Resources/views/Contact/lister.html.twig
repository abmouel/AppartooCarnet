<html>
    <body>    
<h1>Liste des contacts</h1>

<table>
{% for a in contact %}
	<tr>
		<td>{{ a.nom }}</td>
		<td>{{ a.prenom }}</td>
		<td>{{ a.telephone}}</td>
		<td>{{ a.email }}</td>
        <td>{{ a.siteweb }}</td>
		<td><a href="{{ path('myapp_contact_modifier', { 'id': a.id }) }}">Modifier</a></td>
		<td><a href="{{ path('myapp_contact_supprimer', { 'id': a.id }) }}">Supprimer</a></td>
	</tr>
{% else %}
	<tr><td>Aucun contact n'a été trouvé.</td></tr>
{% endfor %}
</table>

<p><a href="{{ path('myapp_contact_ajouter') }}">Ajouter un nouveau contact!</a><p>
    </body>
</html>
